{
  "default_stop_words": [
    "apply",
    "defdata",
    "defimpl",
    "defmodule",
    "defrecord",
    "defstruct",
    "defsum",
    "def.+(.+\/\/.+).+do",
    "use"
  ],

  "custom_stop_words": [
    "Logger."
  ],

  "skip_files": [
    "priv/",
    "test/"
  ],

  "coverage_options": {
    "minimum_coverage": 90,
    "output_dir": "coverage/report",
    "template_path": "coverage/templates/html/htmlcov/",
    "treat_no_relevant_lines_as_covered": true
  }
}
